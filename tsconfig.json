{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  }
}
